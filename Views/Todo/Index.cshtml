@model List<ToDoListApp.Models.TodoItem>
<h1>To-Do List</h1>
<form method="post" asp-action="Create">
 <input type="text" name="title" placeholder="Add a new task" />
 <button type="submit">Add</button>
</form>
<ul>
 @foreach (var item in Model)
 {
 <li>
 <input type="checkbox" />
 <span>@item.Title</span>
 </li>
 }
</ul>